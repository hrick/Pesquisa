<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/titulo_pesquisas_realizadas"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/tvTitulo"
        android:id="@+id/tvQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/hint_quantidade"
        android:textSize="32sp" />


    <Button
        android:id="@+id/ibExportExcel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:text="@string/exportar_em_excel"
        android:drawableTop="@drawable/file_export"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/tvQuantidade"
        />

</RelativeLayout>